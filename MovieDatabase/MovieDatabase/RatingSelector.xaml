<UserControl x:Class="MovieDatabase.RatingSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieDatabase"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="200">
    <GroupBox Header="Rating" Padding="5" HorizontalAlignment="Center" >
        <WrapPanel Background="AliceBlue">
            <RadioButton x:Name="Rb1" Content="1" Margin="5" />
            <RadioButton x:Name="Rb2" Content="2" Margin="5" />
            <RadioButton x:Name="Rb3" Content="3" Margin="5" />
            <RadioButton x:Name="Rb4" Content="4" Margin="5" />
            <RadioButton x:Name="Rb5" Content="5" Margin="5" />
        </WrapPanel>
    </GroupBox>
</UserControl>
