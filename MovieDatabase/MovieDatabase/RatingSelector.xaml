<UserControl x:Class="MovieDatabase.RatingSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieDatabase"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="200">
    <GroupBox Header="Rating" Padding="5">
        <WrapPanel HorizontalAlignment="Right">
            <RadioButton x:Name="RbOne" Content="1" Margin="5"/>
            <RadioButton x:Name="RbTwo" Content="2" Margin="5"/>
            <RadioButton x:Name="RbThree" Content="3" Margin="5"/>
            <RadioButton x:Name="RbFour" Content="4" Margin="5"/>
            <RadioButton x:Name="RbFive" Content="5" Margin="5"/>
        </WrapPanel>
    </GroupBox>
</UserControl>
